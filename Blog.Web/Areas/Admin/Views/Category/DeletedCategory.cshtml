@using Blog.Entity.VİewModels.Categories;
@model List<CategoryDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi /</span> kategoriler</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            
            <table class="table table-bordered" id="categoriesTable" width="100%" collspacig="0">
                <thead>
                    <tr>
                        <th>isim</th>
                        <th>Oluşturma tarihi</th>
                        <th>Oluşturan</th>
                        <th>durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>isim</th>
                        <th>Kategori</th>
                        <th>Oluşturma tarihi</th>
                        <th>Oluşturan</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>



                <tbody class="table-border-bottom-0">

                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name </td>

                            <td>@category.CreatedDate.ToShortDateString() </td>
                            <td>@category.CreatedBy </td>
                            <td>@(category.IsDeleted ? "aktif değil" : "aktif")</td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="UndoDelete" asp-route-categoryId="@category.Id"><i class="bx bx-undo"></i></a>
                                @*<a class="btn btn-dangers btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id"><i class="bx bxs-minus-circle"></i></a>*@
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->


</div>


@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}