@using Blog.Entity.VİewModels.Articles;
@model ArticleUpdateDto
@{
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yönetimi /</span> Basic Inputs</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Default</h5>

                <form asp-controller="Article" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">

                            <label asp-for="CategoryId">Kategori</label>

                            @*kategoriyi döndürüyor*@
                            <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Title" for="defaultFormControlInput" class="form-label">başlık</label>
                            <input asp-for="Title"  type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen başlık girin" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Content" for="defaultFormControlInput" class="form-label">içerik</label>
                            <textarea asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:300px" placeholder="İerik giriniz" aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        
                        </div>

                        <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Image.FileName" for="defaultFormControlInput" class="form-label d-block">mevcut Resim</label>
                            @if (Model.Image != null)
                            {
                                <img src="~/images/@Model.Image.FileName" class="mb-3" name="FileName" style="height:20em;width:20em" alt="@Model.Title" />
                            }
                            else
                            {
                                <p>Resim Bulunamadı</p>
                            }
                        </div>

                       
                        <div class="form-group col-md-6">
                            <label asp-for="Photo" for="defaultFormControlInput" class="form-label">Resim seç</label>
                            <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp"></input>
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                       @* <div class="form-group">
                            <label asp-for="Image.FileName" for="defaultFormControlInput" class="form-label">mevcut Resim</label>
                            <img src="~/images/@Model.Image.FileName" style="height:20em;width:20em" alt="@Model.Title" />
                           
                        </div>*@
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn btn-block">Kaydet</button>
                        </div>

                        

                    </div>

                </form>
            </div>
        </div>



    </div>
</div>